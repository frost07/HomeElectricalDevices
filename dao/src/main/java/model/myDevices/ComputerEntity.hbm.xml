<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.myDevices.ComputerEntity" table="computer" schema="employees">
        <property name="type">
            <column name="type" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="size">
            <column name="size" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="color">
            <column name="color" sql-type="varchar(100)" length="100" not-null="true"/>
        </property>
        <property name="power">
            <column name="power" sql-type="int(100)" not-null="true"/>
        </property>
        <property name="sizeHdd">
            <column name="sizeHDD" sql-type="int(100)" not-null="true"/>
        </property>
        <property name="state">
            <column name="state" sql-type="int(1)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>